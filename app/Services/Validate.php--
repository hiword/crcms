<?php
namespace App\Services;
use Illuminate\Support\Facades\Validator;
class Validate 
{
	/**
	 * 验证规则
	 * @var array
	 * @author simon
	 */
	protected $rule = [];
	
	/**
	 * 需要处理的数据
	 * @var array
	 * @author simon
	 */
	protected $data = [];
	
	/**
	 * 
	 * @param array $rule
	 * @param array $data
	 * @author simon
	 */
	public function __construct(array $data,array $rule,Response $Response)
	{
		$this->data = $data;
		$this->rule = $rule;
	}
	
	public function validator()
	{
		$Validator = Validator::make($this->data,$this->rule);
		if ($Validator->fails())
		{
			$Response->throwResponsed(['error',$Validator->messages()]);
			return false;
		}
		
		return true;
	}
	
}