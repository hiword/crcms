{
    "name": "crcms",
    "description": "Comprehensive open source CMS",
    "keywords": ["crcms", "laravel" , "cms"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
		"jenssegers/agent" : "^2.3",
		"intervention/image" : "^2.3",
    	"intervention/imagecache" : "^2.3",
        "mews/purifier": "^2.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files" : [ 
        	"app/tool.php", 
        	"app/helper.php",
        	"modules/simon/log/src/helper.php",
        	"modules/simon/mail/src/helper.php",
        	"modules/simon/file/src/helper.php"
        ],
        "psr-4": {
            "App\\": "app/",
			"Simon\\Document\\" : "modules/simon/document/src",
			"Simon\\Log\\" : "modules/simon/log/src",
			"Simon\\File\\" : "modules/simon/file/src",
			"Simon\\Tag\\" : "modules/simon/tag/src",
			"Simon\\User\\" : "modules/simon/user/src",
			"Simon\\Mail\\" : "modules/simon/mail/src",
			"Simon\\Model\\" : "modules/simon/model/src",
			"Simon\\Count\\" : "modules/simon/count/src",
			"Simon\\System\\" : "modules/simon/system/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
